{
  "scopeName": "source.l20",
  "patterns": [
    { "include": "#label" },
    { "include": "#directive"},
    { "include": "#opcode" }, 
    { "include": "#immediate"},
    { "include": "#register"},
    { "include": "#comment"}
  ],
  "repository": {
    "label": {
      "match":"[a-z][a-zA-Z0-9_]*",
      "name": "variable.other"
    },
    "directive": {
      "match":"__[A-Z]{3,}",
      "name": "support.function.directive"
    },
    "opcode": {
      "match": "CIR|SIR|LDR|STR|ADD|NND|PSR|SEF|CLF|PPR|MOV|JMP|BCS|BVS|BZS|BNS|LSL|LSR|ASR",
      "name": "keyword.opcode"
    },
    "immediate":{
      "match": "#-?(0x|x|b)?[0-9a-fA-F]*",
      "name": "constant.numeric"
    },
    "register":{
      "match": "R([0-9]{1,3}|x[0-9a-fA-F]{1,2})",
      "name": "variable"
    },
    "comment": {
      "match": ";.*",
      "name": "comment"
    }
  }
}